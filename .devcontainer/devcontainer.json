{
    "name": "Haskell Ray Tracing Dev container",
    "image": "curaai00/haskell-dev:0.1",
    "runArgs": [],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash",
        "haskell.hlintOn": true,
        "haskell.liquidOn": true,
        "haskell.languageServerVariant": "haskell-language-server",
        "editor.defaultFormatter": "sergey-kintsel.haskell-formatter-vscode-extension",
        "haskell.formattingProvider": "stylish-haskell",
        "editor.tabSize": 2
    },
    "extensions": [
        "haskell.haskell",
        "sergey-kintsel.haskell-formatter-vscode-extension",
        "justusadam.language-haskell",
        "ndmitchell.haskell-ghcid",
        "hoovercj.haskell-linter",
        "ayh.ppmviewer"
    ]
}